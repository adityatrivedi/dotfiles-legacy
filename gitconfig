	name = Aditya Trivedi
	email = adityatriv@gmail.com
[credential]
	helper = osxkeychain
[core]
	excludesfile = ~/.gitignore_global
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[push]
	default = simple
[alias]
    ai = add --interactive
	co = checkout
	ci = commit
	st = status -s
	br = branch
	cl = clone
	diff = diff --word-diff
	dc = diff --cached
	cp = cherry-pick
	type = cat-file -t
	dump = cat-file -p
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
